<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.perfil.buttons.minhaConta.MinhaContaFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_profile_expanded"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_view_cadastro"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/grey_bg"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="Meu Cadastro"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/button_text_colors"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_view_privacidade"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/grey_bg"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="Segurança e privacidade"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/button_text_colors"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_view_cadastro" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_view_pagamentos"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/grey_bg"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="Gerenciar Pagamentos"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/button_text_colors"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_view_privacidade" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_view_comunicacoes"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/grey_bg"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="Comunicações"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/button_text_colors"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_view_pagamentos" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/grey_bg"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="Sair"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/button_text_colors"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_view_comunicacoes" />

</androidx.constraintlayout.widget.ConstraintLayout>