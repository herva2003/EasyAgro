<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="8dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative_layout" >

        <ImageView
            android:id="@+id/imgAnuncio"
            android:layout_width="120dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0sp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/nome_item_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxEms="20"
            android:layout_toEndOf="@id/imgAnuncio"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/categoria_item_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nome_item_market"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@id/imgAnuncio"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/preco_item_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoria_item_market"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@id/imgAnuncio"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/data_publicacao"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@id/preco_item_market"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/imgAnuncio"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>